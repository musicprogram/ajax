<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @article.name %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<h1>Comments</h1>


<div class="field">
  <p>
    <%= render "comments/form" %>
  </p>
</div>

<ul id="comments-box">
  
    <% @article.comments.each do |comment|%>
      <li>
        <%= comment.name %>
      </li>
    <% end %>  
</ul>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
